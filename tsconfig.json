{
  "compilerOptions": {
    "target": "es2016", // or higher, depending on your Node.js version
    "module": "ESNext", // Use ES6 or ESNext for ES Module support
    "rootDir": "./src",
    "outDir": "./dist", // Specify an output directory for compiled files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}